{
  "ndm-test": {
    "description": "thumbnailing service",
    "scripts": {
      "start": "node ./test.js convert --foo=bar",
      "foo": "./bin/foo.js"
    },
    "env": {
      "PORT": 8000,
      "USER": "bcoe"
    },
    "args": {
      "--kitten": "cute",
      "--dog": {
        "default": "also-cute",
        "description": "what do you think of dogs?"
      },
      "--frontdoor-url": {
        "default": "google.com",
        "description": "pork chop sandwiches"
      }
    }
  },
  "ndm-test2": {
    "scripts": {
      "start": "./test.js"
    },
    "module": "ndm-test",
    "env": {
      "PORT": 8080,
      "HOST": {
        "default": "localhost",
        "description": "what host should I bind to?"
      }
    },
    "args": [
      "--apple",
      "banana",
      "--spider-man",
      "sad",
      "awesome"
    ]
  },
  "env": {
    "APP": "my-test-app",
    "ENVIRONMENT": {
      "default": "test",
      "description": "what environment should we run the app in"
    }
  },
  "args": {
    "--batman": "greatest-detective",
    "--spider-man": "spectacular",
    "--frontdoor-url": {
      "default": "http://127.0.0.1:8080",
      "description": "url of front facing server"
    }
  },
  "@npm/ndm-test2": {
    "description": "Test program for ndm deployment library.",
    "scripts": {
      "thumbd": "./test3.js",
      "start": "node ./test.js",
      "echo": "echo hello",
      "node-echo": "node ./test2.js"
    },
    "env": {
      "PORT": 5000
    },
    "args": {
      "--verbose": "false",
      "--host": {
        "default": "0.0.0.0",
        "description": "what host should we bind to?"
      }
    }
  }
}